<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DogPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="-16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:text="우리아이 정보 수정"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold">
            </TextView>

            <View
                android:layout_marginTop="20dp"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/search"
                    app:civ_border_color="@color/design_default_color_primary_dark"
                    app:civ_border_width="2dp"
                    app:civ_fill_color="#23f22f" />

            </RelativeLayout>

            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="이름"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <EditText
                android:id="@+id/name_edit"
                android:textColor="@color/black"
                android:layout_marginLeft="24dp"
                android:textSize="20dp"
                android:layout_marginRight="20dp"
                android:text="별"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>

            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="품종"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <EditText
                android:id="@+id/animal_edit"
                android:textColor="@color/black"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:text="말티즈"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>

            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="나이"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <EditText
                android:id="@+id/age_edit"
                android:textColor="@color/black"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:text="9년 4개월"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>

            <TextView
                android:id="@+id/weight"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="무게"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/weight_dog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:text="3.9"
                    android:textColor="@color/black"
                    android:textSize="20dp"></EditText>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    android:text="kg"
                    android:textColor="@color/black"
                    android:textSize="20dp"></TextView>

            </RelativeLayout>

            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="성별"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/man"
                    android:text="남자"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:background="@drawable/edge_green_btn"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

                <Button
                    android:id="@+id/woman"
                    android:text="여자"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:background="@drawable/edge"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

            </LinearLayout>

            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="아이가 중성화 수술을 했나요?"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/no"
                    android:text="안했어요"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:background="@drawable/edge_green_btn"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

                <Button
                    android:id="@+id/yes"
                    android:text="했어요"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:background="@drawable/edge"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

            </LinearLayout>

            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="아이와 산책은 매일 하시나요?"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/baby_yes"
                    android:text="네"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:background="@drawable/edge_green_btn"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

                <Button
                    android:id="@+id/baby_no"
                    android:text="아니오"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:background="@drawable/edge"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

            </LinearLayout>

            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="아이의 어떤 건강고민이 있나요?"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:textColor="@color/gray"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="최대 3개까지 선택 가능합니다."
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_1"
                    android:text="알레르기"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edge_green_btn"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

                <Button
                    android:id="@+id/btn_2"
                    android:text="장"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:background="@drawable/edge"
                    android:layout_weight="4"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

                <Button
                    android:id="@+id/btn_3"
                    android:text="치아/구강"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:background="@drawable/edge"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

                <Button
                    android:id="@+id/btn_4"
                    android:text="비만"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edge"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

                <Button
                    android:id="@+id/btn_5"
                    android:text="뼈/관절"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:background="@drawable/edge"
                    android:layout_weight="2"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_6"
                    android:text="피부/모질"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edge_green_btn"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

                <Button
                    android:id="@+id/btn_7"
                    android:text="노령"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:background="@drawable/edge"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

                <Button
                    android:id="@+id/btn_8"
                    android:text="신장/요로"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:background="@drawable/edge"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

                <Button
                    android:id="@+id/btn_9"
                    android:text="호흡기"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edge"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

                <Button
                    android:id="@+id/btn_10"
                    android:text="심장"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:background="@drawable/edge"
                    android:layout_weight="3"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_11"
                    android:text="당뇨"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edge_green_btn"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

                <Button
                    android:text="눈/귀"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:background="@drawable/edge"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

                <Button
                    android:id="@+id/btn_12"
                    android:text="행동"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginRight="180dp"
                    android:background="@drawable/edge"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>


            </LinearLayout>

            <TextView
                android:textColor="@color/gray"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="아이가 알레르기가 있나요?"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/allergy_yes"
                    android:text="네"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:background="@drawable/edge_green_btn"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

                <Button
                    android:id="@+id/allergy_no"
                    android:text="아니요"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:background="@drawable/edge"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp">
                </Button>

            </LinearLayout>

            <Button
                android:id="@+id/save"
                android:text="저장하기"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/edge_save_btn"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="54dp">
            </Button>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>