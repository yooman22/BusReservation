<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dog_Introduce">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="애완견의 특성 알기"
        android:background="@drawable/black_edge"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textFontWeight="@android:integer/config_longAnimTime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="특성을 알고싶은 강아지를 선택하세요."
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:id="@+id/view1"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/p1"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                </ImageView>
                <TextView
                    android:id="@+id/view1_txt"
                    android:textAlignment="center"
                    android:text="시츄"
                    android:layout_width="80dp"
                    android:layout_height="20dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view2"
                android:layout_marginLeft="50dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/p2"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                </ImageView>
                <TextView
                    android:id="@+id/view2_txt"
                    android:textAlignment="center"
                    android:text="비숑 프리제"
                    android:layout_width="80dp"
                    android:layout_height="20dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view3"
                android:layout_marginLeft="50dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/p3"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                </ImageView>
                <TextView
                    android:id="@+id/view3_txt"
                    android:textAlignment="center"
                    android:text="포메라니안"
                    android:layout_width="80dp"
                    android:layout_height="20dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view4"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/p4"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                </ImageView>
                <TextView
                    android:id="@+id/view4_txt"
                    android:textAlignment="center"
                    android:text="치와와"
                    android:layout_width="80dp"
                    android:layout_height="20dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view5"
                android:layout_marginLeft="50dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/p5"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                </ImageView>
                <TextView
                    android:id="@+id/view5_txt"
                    android:textAlignment="center"
                    android:text="요크셔 테리어"
                    android:layout_width="80dp"
                    android:layout_height="20dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view6"
                android:layout_marginLeft="50dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/p6"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                </ImageView>
                <TextView
                    android:id="@+id/view6_txt"
                    android:textAlignment="center"
                    android:text="몰티즈"
                    android:layout_width="80dp"
                    android:layout_height="20dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view7"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/p7"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                </ImageView>
                <TextView
                    android:id="@+id/view7_txt"
                    android:textAlignment="center"
                    android:text="파피용"
                    android:layout_width="80dp"
                    android:layout_height="20dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view8"
                android:layout_marginLeft="50dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/p8"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                </ImageView>
                <TextView
                    android:id="@+id/view8_txt"
                    android:textAlignment="center"
                    android:text="미니어처 핀셔"
                    android:layout_width="80dp"
                    android:layout_height="20dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view9"
                android:layout_marginLeft="50dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/p9"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                </ImageView>
                <TextView
                    android:id="@+id/view9_txt"
                    android:textAlignment="center"
                    android:text="닥스훈트"
                    android:layout_width="80dp"
                    android:layout_height="20dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>