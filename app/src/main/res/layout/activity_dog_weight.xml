<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DogWeight">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/orange"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="오늘\n몸무게를 기록해주세요!">
        </TextView>

        <ImageView
            android:layout_marginLeft="140dp"
            android:src="@drawable/ideas"
            android:layout_width="40dp"
            android:layout_height="40dp">
        </ImageView>

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>

    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/btn_A"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="계산기"
        android:textStyle="bold"
        android:background="@drawable/edge_white"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </Button>

    <Button
        android:id="@+id/btn_B"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="직접입력"
        android:textStyle="bold"
        android:background="@drawable/edge_gray"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="210dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </Button>

    <RelativeLayout
        android:id="@+id/calc_View"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_A"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="전체 몸무게"
            android:textStyle="bold"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <EditText
            android:id="@+id/edit_A"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="사람 + 강아지"
            android:textStyle="bold"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edge_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </EditText>

        <TextView
            android:id="@+id/txt_B"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="뺄 몸무게"
            android:textStyle="bold"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <EditText
            android:id="@+id/edit_B"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="사람"
            android:textStyle="bold"
            android:layout_marginTop="290dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edge_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </EditText>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_View"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_C"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="170dp"
            android:text="몸무게"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <EditText
            android:id="@+id/edit_C"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edge_white"
            android:hint="강아지"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></EditText>

    </RelativeLayout>


    <androidx.appcompat.widget.Toolbar
        android:background="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/confirm_weight"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:text="등록하기"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>

    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>