<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Find_ID_Result">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="아이디 찾기"
        android:background="@drawable/black_edge"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textFontWeight="@android:integer/config_longAnimTime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="고객님의 정보와 일치하는 아이디 목록입니다."
            android:textSize="19dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:layout_marginTop="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="아이디를 먼저 선택 한 후. 로그인 또는 비밀번호 찾기 버튼을 눌러주세요."
            android:textSize="16dp"
            android:textAlignment="textStart"
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/resultId"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/white_edge"
            android:hint="ID"
            android:textColorHint="@color/cardview_dark_background"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textAlignment="textStart"
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/moveLoginButton"
            android:background="@drawable/edge"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:text="로그인"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        </Button>

        <Button
            android:id="@+id/moveFindPwdButton"
            android:background="@drawable/edge"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="비밀번호 찾기"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        </Button>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>