<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Find_Password">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="비밀번호 찾기"
        android:background="@drawable/black_edge"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textFontWeight="@android:integer/config_longAnimTime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="새로운 비밀번호를 입력해주세요."
            android:textSize="19dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:layout_marginTop="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/updatePwd1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/white_edge"
            android:hint="비밀번호입력"
            android:textColorHint="@color/cardview_dark_background"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textAlignment="textStart"
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/updatePwd2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/white_edge"
            android:hint="새 비밀번호 입력"
            android:textColorHint="@color/cardview_dark_background"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textAlignment="textStart"
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/updatePwdButton"
            android:background="@drawable/edge"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="확인"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        </Button>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>