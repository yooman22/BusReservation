<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputAnimal">

    <ImageView
        android:id="@+id/main"
        android:scaleType="fitXY"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:src="@drawable/main1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="300dp"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="당신의 나이를 입력하세요."
            android:textAlignment="center"
            android:textFontWeight="@android:integer/config_longAnimTime"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/user_age"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:textFontWeight="@android:integer/config_longAnimTime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:visibility="gone"
        android:id="@+id/user_age_txt"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textFontWeight="@android:integer/config_longAnimTime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="21dp"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:text="애완견의 나이를 입력하세요."
        android:textAlignment="center"
        android:textFontWeight="@android:integer/config_longAnimTime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/pet_age"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:autoSizeTextType="uniform"
        android:textFontWeight="@android:integer/config_longAnimTime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/pet_age_txt"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/pet_name"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:hint="애완견의 이름을 입력하세요."
        android:textSize="22dp"
        android:textFontWeight="@android:integer/config_longAnimTime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="애완견 종을 입력하세요."
            android:textAlignment="center"
            android:textFontWeight="@android:integer/config_longAnimTime"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/pet_breed"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:autoSizeTextType="uniform"
        android:textFontWeight="@android:integer/config_longAnimTime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/pet_breed_txt"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="애완견의 성별을 입력하세요."
            android:textAlignment="center"
            android:textFontWeight="@android:integer/config_longAnimTime"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/pet_gender"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textFontWeight="@android:integer/config_longAnimTime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/pet_gender_txt"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textFontWeight="@android:integer/config_longAnimTime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/next"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="@drawable/edge"
        android:textColor="@android:color/black"
        android:text="다음페이지"
        android:textColorLink="@color/white"
        android:textSize="22dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>